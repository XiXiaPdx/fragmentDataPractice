<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.guest.moviesearch.SearchFragment"
    tools:layout_editor_absoluteX="0dp"
    tools:layout_editor_absoluteY="81dp">

    <!-- TODO: Update blank fragment layout -->

    <Button
        android:id="@+id/changeTextMain"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text='Change Text from "Main Activity"'
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="160dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/showHideButton"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/inputText"
        android:layout_width="225dp"
        android:layout_height="44dp"
        android:ems="10"
        android:hint="Test Data transfer to Main"
        android:inputType="textPersonName"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/changeTextFragment"
        app:layout_constraintVertical_bias="0.94" />

    <Button
        android:id="@+id/showHideButton"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="Toggle Visibility"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="19dp"
        app:layout_constraintTop_toBottomOf="@+id/changeTextFragment" />

    <Button
        android:id="@+id/changeTextFragment"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text='Change Text to "from fragment"'
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/submitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="submit"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="16dp"
        app:layout_constraintLeft_toRightOf="@+id/inputText"
        android:layout_marginLeft="8dp"
        app:layout_constraintHorizontal_bias="0.595"
        app:layout_constraintBaseline_toBaselineOf="@+id/inputText" />

</android.support.constraint.ConstraintLayout>
